{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "docs": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/docs",
            "index": "src/docs/index.html",
            "main": "src/docs/main.ts",
            "tsConfig": "src/docs/tsconfig.json",
            "polyfills": "src/docs/polyfills.ts",
            "assets": [
              {
                "glob": "**",
                "input": "src/lib/assets",
                "output": "/assets"
              },
              {
                "glob": "**",
                "input": "src/docs/assets",
                "output": "/assets"
              },
              {
                "glob": "*.svg",
                "input": "node_modules/@dynatrace/dt-iconpack",
                "output": "/assets/icons"
              },
              {
                "glob": "metadata.json",
                "input": "node_modules/@dynatrace/dt-iconpack",
                "output": "/assets/icons"
              }
            ],
            "styles": [
              "src/docs/main.scss"
            ],
            "scripts": [
              "node_modules/highlight.js/lib/highlight.js"
            ]
          },
          "configurations": {
            "production": {
              "tsConfig": "src/docs/tsconfig-build.json",
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "vendorChunk": false
            },
            "production-aot": {
              "tsConfig": "src/docs/tsconfig-build.json",
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "vendorChunk": false,
              "buildOptimizer": true,
              "aot": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "docs:build",
            "host": "0.0.0.0"
          },
          "configurations": {}
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "docs:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [],
            "exclude": []
          }
        }
      }
    },
    "lib": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "library",
      "prefix": "dt",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "src/lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "project": "src/lib/package.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/lib/test.ts",
            "tsConfig": "src/lib/tsconfig.spec.json",
            "karmaConfig": "test/karma.conf.js"
          }
        }
      }
    }
  },
  "defaultProject": "lib",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": ""
    },
    "@schematics/angular:directive": {
      "prefix": ""
    }
  },
  "cli": {
    "packageManager": "yarn"
  }
}
