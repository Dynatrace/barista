{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular-components"
  },
  "apps": [
    {
      "name": "docs",
      "root": "src/docs",
      "outDir": "dist/docs",
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "./polyfills.ts",
      "tsconfig": "./tsconfig-build.json",
      "prefix": "",
      "assets": [{
        "glob": "**",
        "input": "../lib/assets",
        "output": "./assets"
      }],
      "styles": [
        "main.scss"
      ],
      "scripts": [
        "../../node_modules/highlight.js/lib/highlight.js"
      ]
    }
  ],
  "defaults": {
    "serve": {
      "host": "0.0.0.0"
    }
  }
}
