{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom", "es2016.array.include"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "target": "es5",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {}
  },
  "exclude": ["node_modules", "dist", "**/*.ngfactory.ts", "**/*.shim.ts"]
}
